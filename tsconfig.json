{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
        "noEmit": true,

        "allowJs": true,
        "checkJs": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,

        "strict": true,

        "noImplicitAny": false,
        "useUnknownInCatchVariables": false,
        "target": "es2022"
    },
    "include": [
        "**/*.js",
        "**/*.d.ts"
    ],
    "exclude": [
        "admin/blockly.js",
        "node_modules/**",
        "widgets/**"
    ]
}