{
    "i18n": true,
    "type": "panel",
    "items": {
        "defaultServerHeader": {
            "type": "header",
            "text": "defaultServerHeader",
            "size": 4
        },
        "serverURL": {
            "type": "text",
            "label": "serverURL",
            "help": "helpServerURL",
            "newLine": true,
            "sm": 12,
            "md": 6
        },
        "allowSSL": {
            "type": "checkbox",
            "label": "allowSSL",
            "sm": 12,
            "md": 6
        },
        "defaultSettingsHeader": {
            "type": "header",
            "text": "defaultSettingsHeader",
            "newLine": true,
            "size": 4
        },
        "defaultTopic": {
            "type": "text",
            "label": "defaultTopic",
            "newLine": true,
            "sm": 12,
            "md": 6,
            "lg": 3
        },
        "defaultTopicAuth": {
            "type": "select",
            "label": "defaultTopicAuth",
            "options": [
                {
                    "label": "defaultTopicAuthNone",
                    "value": 0
                },
                {
                    "label": "defaultTopicAuthUser",
                    "value": 1
                },
                {
                    "label": "defaultTopicAuthToken",
                    "value": 2
                }
            ],
            "sm": 12,
            "md": 6,
            "lg": 3
        },
        "defaultSubscribed": {
            "type": "checkbox",
            "label": "defaultSubscribed",
            "sm": 12,
            "md": 6,
            "lg": 3
        },
        "defaultUsername": {
            "type": "text",
            "label": "defaultUsername",
            "disabled": "data.defaultTopicAuth !== 1",
            "newLine": true,
            "sm": 12,
            "md": 6,
            "lg": 3
        },
        "defaultPassword": {
            "type": "password",
            "label": "defaultPassword",
            "disabled": "data.defaultTopicAuth !== 1",
            "visible": true,
            "newLine": false,
            "sm": 12,
            "md": 6,
            "lg": 3
        },
        "defaultAccessToken": {
            "type": "password",
            "label": "defaultAccessToken",
            "help": "helpDefaultAccessToken",
            "disabled": "data.defaultTopicAuth !== 2",
            "newLine": false,
            "sm": 12,
            "md": 6,
            "lg": 3
        },
        "presetTopicsHeader": {
            "type": "header",
            "text": "presetSettingsHeader",
            "size": 4
        },
        "presetTopics": {
            "type": "table",
            "sm": 12,
            "items": [
                {
                    "type": "text",
                    "attr": "presetTopicName",
                    "title": "presetTopicName"
                },
                {
                    "type": "checkbox",
                    "attr": "presetTopicSubscribed",
                    "title": "presetTopicSubscribed",
                    "style": {
                        "width": "auto",
                        "textAlign": "center"
                    }
                },
                {
                    "type": "select",
                    "attr": "presetTopicAuth",
                    "title": "presetTopicAuth",
                    "options": [
                        {
                            "label": "presetTopicAuthNone",
                            "value": 0
                        },
                        {
                            "label": "presetTopicAuthUser",
                            "value": 1
                        },
                        {
                            "label": "presetTopicAuthToken",
                            "value": 2
                        }
                    ]
                },
                {
                    "type": "text",
                    "attr": "presetTopicUsername",
                    "title": "presetTopicUsername"
                },
                {
                    "type": "password",
                    "attr": "presetTopicPassword",
                    "title": "presetTopicPassword",
                    "visible": true,
                    "style": {}
                },
                {
                    "type": "password",
                    "attr": "presetTopicAccessToken",
                    "title": "presetTopicAccessToken",
                    "visible": true,
                    "style": {}
                }
            ]
        }
    }
}